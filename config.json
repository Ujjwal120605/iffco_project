      "supportedLanguages": ["en", "hi"],
      "dateFormat": "DD/MM/YYYY",
      "timeFormat": "24h",
      "currency": "INR"
    },
    "performance": {
      "monitoring": true,
      "caching": {
        "enabled": true,
        "duration": 300000
      },
      "compression": true,
      "lazyLoading": true,
      "prefetch": false
    },
    "accessibility": {
      "keyboardNavigation": true,
      "screenReader": true,
      "highContrast": true,
      "fontSize": {
        "min": 12,
        "max": 24,
        "default": 16
      },
      "focusIndicator": true
    },
    "logging": {
      "level": "info",
      "console": true,
      "remote": false,
      "categories": {
