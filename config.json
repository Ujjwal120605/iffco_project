{
    "app": {
      "name": "IFFCO Employee Portal",
      "version": "1.0.0",
      "description": "Indian Farmers Fertiliser Cooperative Limited - Employee Authentication System",
      "author": "IFFCO IT Department",
      "build": "2024-08-25"
    },
    "security": {
      "maxLoginAttempts": 3,
      "lockoutDuration": 900000,
      "sessionTimeout": 3600000,
      "passwordPolicy": {
        "minLength": 8,
        "requireUppercase": true,
        "requireLowercase": true,
        "requireNumbers": true,
        "requireSpecialChars": true,
        "maxAge": 7776000000
      },
      "encryptionAlgorithm": "AES-256",
      "hashAlgorithm": "SHA-256"
    },
    "ui": {
      "theme": {
        "primary": "#2c5530",
        "secondary": "#1e3a21",
        "accent": "#4caf50",
        "background": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
        "text": "#333333",
        "textLight": "#666666",
        "success": "#4caf50",
        "error": "#f44336",
        "warning": "#ff9800",
        "info": "#2196f3"
      },
      "animations": {
        "duration": {
          "fast": 200,
          "normal": 300,
          "slow": 600
        },
        "easing": {
          "ease": "cubic-bezier(0.4, 0.0, 0.2, 1)",
          "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
          "smooth": "cubic-bezier(0.25, 0.1, 0.25, 1)"
        },
        "enabled": true,
        "reducedMotion": false
      },
      "responsive": {
        "breakpoints": {
          "mobile": "480px",
          "tablet": "768px",
          "desktop": "1024px",
          "wide": "1200px"
        }
      }
    },
    "features": {
      "rememberUser": true,
      "socialLogin": {
        "google": true,
        "microsoft": false,
        "facebook": false
      },
      "twoFactorAuth": false,
      "biometricAuth": false,
      "darkMode": true,
      "offline": false,
      "analytics": false
    },
    "api": {
      "baseUrl": "https://api.iffco.coop",
      "endpoints": {
        "login": "/auth/login",
        "logout": "/auth/logout",
        "refresh": "/auth/refresh",
        "profile": "/user/profile",
        "resetPassword": "/auth/reset-password",
        "changePassword": "/auth/change-password"
      },
      "timeout": 10000,
      "retries": 3
    },
